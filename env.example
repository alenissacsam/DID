# EduCert System Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Deployer private key (without 0x prefix)
PRIVATE_KEY=your_private_key_here

# RPC URL for the target network
RPC_URL=https://sepolia.infura.io/v3/your_project_id

# Etherscan API key for contract verification
ETHERSCAN_API_KEY=your_etherscan_api_key

# =============================================================================
# WALLET ADDRESSES (IMPORTANT: Use real addresses in production)
# =============================================================================

# Community wallet for token distribution (40% of supply)
COMMUNITY_WALLET=0x1000000000000000000000000000000000000001

# Team wallet for token distribution (20% of supply)
TEAM_WALLET=0x2000000000000000000000000000000000000002

# Treasury wallet for token distribution (25% of supply)
TREASURY_WALLET=0x3000000000000000000000000000000000000003

# Ecosystem wallet for token distribution (15% of supply)
ECOSYSTEM_WALLET=0x4000000000000000000000000000000000000004

# =============================================================================
# EXTERNAL DEPENDENCIES
# =============================================================================

# LayerZero Endpoint addresses
# Ethereum Mainnet: 0x3c2269811836af69497E5F486A85D7316753cf62
# Polygon Mainnet: 0x3c2269811836af69497E5F486A85D7316753cf62
# Sepolia Testnet: 0x464570adA09869d8741132183721B4f0769a0287
LAYERZERO_ENDPOINT=0x464570adA09869d8741132183721B4f0769a0287

# ERC-4337 EntryPoint address (same across all networks)
ENTRY_POINT=0x5FF137D4b0FDCD49DcA30c7CF57E578a026d2789

